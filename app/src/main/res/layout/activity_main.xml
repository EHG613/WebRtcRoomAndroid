<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fingdo.statelayout.StateLayout xmlns:sl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:emptyImg="@drawable/ic_state_empty"
        sl:emptyText="未搜索到PC客户端，请确认是否已打开PC客户端再进行操作"
        sl:errorImg="@drawable/ic_state_error"
        sl:errorText="服务已断开..."
        sl:loadingText="搜索中..."
        sl:loginImg="@drawable/ic_state_login"
        sl:loginText="登录提示文字"
        sl:noNetworkImg="@drawable/ic_state_no_network"
        sl:noNetworkText="网络错误"
        sl:timeOutImg="@drawable/ic_state_time_out"
        sl:timeOutText="未查询到相关设备...">
        <!-- 远端视频流 动态添加-->
        <LinearLayout
            android:id="@+id/remoteVideoLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </com.fingdo.statelayout.StateLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- room名-->
        <EditText
            android:id="@+id/room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="lijian"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <!-- 启动摄像头-->
            <Button
                android:id="@+id/openCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="启动摄像头"
                android:visibility="visible" />

            <!-- 启动摄像头-->
            <Button
                android:id="@+id/switchCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="切换摄像头"
                android:visibility="visible" />
            <Button
                android:id="@+id/stopCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="停止发流"
                android:visibility="visible" />
            <Button
                android:id="@+id/startCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="开始发流"
                android:visibility="visible" />

            <!-- 创建并加入-->
            <Button
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="进入"
                android:visibility="gone" />
            <!-- 退出-->
            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出" />
        </LinearLayout>


        <!-- 本地视频流 -->
        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/localVideo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
